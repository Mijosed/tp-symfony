{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-red-600 mb-6">Tableau de Bord Administrateur</h1>

    <!-- Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Users -->
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-xl font-bold text-gray-700 mb-4">Utilisateurs</h2>
            <p class="text-gray-600 mb-4">Gérer les comptes des utilisateurs.</p>
            <a href="{{ path('app_user_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                Voir les utilisateurs
            </a>
        </div>

        <!-- Restaurants -->
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-xl font-bold text-gray-700 mb-4">Restaurants</h2>
            <p class="text-gray-600 mb-4">Gérer les informations des restaurants.</p>
            <a href="{{ path('app_restaurant_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                Voir les restaurants
            </a>
        </div>

        <!-- Tables -->
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-xl font-bold text-gray-700 mb-4">Tables</h2>
            <p class="text-gray-600 mb-4">Gérer les tables des restaurants.</p>
            <a href="{{ path('app_table_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                Voir les tables
            </a>
        </div>

        <!-- Reservations -->
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-xl font-bold text-gray-700 mb-4">Réservations</h2>
            <p class="text-gray-600 mb-4">Gérer les réservations des clients.</p>
            <a href="{{ path('app_reservation_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                Voir les réservations
            </a>
        </div>

        <!-- Menus -->
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-xl font-bold text-gray-700 mb-4">Menus</h2>
            <p class="text-gray-600 mb-4">Gérer les menus des restaurants.</p>
            <a href="{{ path('app_menu_index') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                Voir les menus
            </a>
        </div>
    </div>
</div>
{% endblock %}
