{% extends 'base.html.twig' %}

{% block title %}Détails de la Réservation{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Détails de la Réservation</h1>

    <table class="w-full border border-gray-300 text-left">
        <tbody>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Id</th>
                <td class="py-2 px-4 border">{{ reservation.id }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Nom du Client</th>
                <td class="py-2 px-4 border">{{ reservation.customerName }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Téléphone</th>
                <td class="py-2 px-4 border">{{ reservation.customerPhone }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Date de Réservation</th>
                <td class="py-2 px-4 border">{{ reservation.reservationDate ? reservation.reservationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Nombre d'Invités</th>
                <td class="py-2 px-4 border">{{ reservation.numberofGuests }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-6 flex justify-between items-center">
        <a href="{{ path('app_reservation_index') }}" class="text-blue-500 hover:underline">← Retour à la liste</a>
        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="text-green-500 hover:underline">Modifier</a>
    </div>

    <div class="mt-4">
        {{ include('reservation/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
