{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Réinitialisez votre mot de passe</h1>

    <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200 max-w-md mx-auto">
        <form method="post">
            <div class="mb-4">
                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 bg-gray-100'}}) }}
                {{ form_errors(resetForm.plainPassword) }}
            </div>

            <button type="submit" class="bg-red-600 text-white py-2 px-4 w-full rounded hover:bg-red-700 transition">
                Réinitialiser le mot de passe
            </button>
        </form>
    </div>
</div>
{% endblock %}
