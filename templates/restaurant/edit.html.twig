{% extends 'base.html.twig' %}

{% block title %}Modifier le Restaurant{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Modifier le Restaurant</h1>

    <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
        <form method="post">
            {% for field in form %}
                <div class="mb-4">
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}

            <button type="submit" class="bg-red-600 text-white py-2 px-4 rounded hover:bg-red-700 transition">
                Mettre à jour
            </button>
        </form>
    </div>

    <div class="mt-6 flex justify-between items-center">
        <a href="{{ path('app_restaurant_index') }}" class="text-blue-500 hover:underline">← Retour à la liste</a>
        {{ include('restaurant/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
