{% extends 'base.html.twig' %}

{% block title %}Liste des Restaurants{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Liste des Restaurants</h1>
    <table class="w-full border border-gray-300 text-left">
        <thead class="bg-gray-100">
            <tr>
                <th class="py-2 px-4 border">Id</th>
                <th class="py-2 px-4 border">Nom</th>
                <th class="py-2 px-4 border">Adresse</th>
                <th class="py-2 px-4 border">Ville</th>
                <th class="py-2 px-4 border">Téléphone</th>
                <th class="py-2 px-4 border">Email</th>
                <th class="py-2 px-4 border">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td class="py-2 px-4 border">{{ restaurant.id }}</td>
                <td class="py-2 px-4 border">{{ restaurant.name }}</td>
                <td class="py-2 px-4 border">{{ restaurant.address }}</td>
                <td class="py-2 px-4 border">{{ restaurant.city }}</td>
                <td class="py-2 px-4 border">{{ restaurant.phone }}</td>
                <td class="py-2 px-4 border">{{ restaurant.email }}</td>
                <td class="py-2 px-4 border">
                    <a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}" class="text-blue-500 hover:underline">Afficher</a>
                    <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="text-green-500 hover:underline">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="py-2 px-4 border text-center text-gray-500">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mt-6">
        <a href="{{ path('app_restaurant_new') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Créer un nouveau</a>
    </div>
</div>
{% endblock %}
