{% extends 'base.html.twig' %}

{% block title %}Détails du Restaurant{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Détails du Restaurant</h1>

    <table class="w-full border border-gray-300 text-left">
        <tbody>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Id</th>
                <td class="py-2 px-4 border">{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Nom</th>
                <td class="py-2 px-4 border">{{ restaurant.name }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Adresse</th>
                <td class="py-2 px-4 border">{{ restaurant.address }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Ville</th>
                <td class="py-2 px-4 border">{{ restaurant.city }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Téléphone</th>
                <td class="py-2 px-4 border">{{ restaurant.phone }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Email</th>
                <td class="py-2 px-4 border">{{ restaurant.email }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-6 flex justify-between items-center">
        <a href="{{ path('app_restaurant_index') }}" class="text-blue-500 hover:underline">Retour à la liste</a>
        <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="text-blue-500 hover:underline">Modifier</a>
    </div>
</div>
{% endblock %}
