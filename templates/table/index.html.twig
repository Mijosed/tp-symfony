{% extends 'base.html.twig' %}

{% block title %}Liste des Tables{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Liste des Tables</h1>
    <table class="w-full border border-gray-300 text-left">
        <thead class="bg-gray-100">
            <tr>
                <th class="py-2 px-4 border">Id</th>
                <th class="py-2 px-4 border">Numéro</th>
                <th class="py-2 px-4 border">Places</th>
                <th class="py-2 px-4 border">Disponible</th>
                <th class="py-2 px-4 border">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr>
                <td class="py-2 px-4 border">{{ table.id }}</td>
                <td class="py-2 px-4 border">{{ table.number }}</td>
                <td class="py-2 px-4 border">{{ table.seats }}</td>
                <td class="py-2 px-4 border">{{ table.isAvailable ? 'Oui' : 'Non' }}</td>
                <td class="py-2 px-4 border">
                    <a href="{{ path('app_table_show', {'id': table.id}) }}" class="text-blue-500 hover:underline">Afficher</a>
                    <a href="{{ path('app_table_edit', {'id': table.id}) }}" class="text-green-500 hover:underline">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="py-2 px-4 border text-center text-gray-500">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mt-6">
        <a href="{{ path('app_table_new') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Créer un nouveau</a>
    </div>
</div>
{% endblock %}
