{% extends 'base.html.twig' %}

{% block title %}Détails de la Table{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Détails de la Table</h1>

    <table class="w-full border border-gray-300 text-left">
        <tbody>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Id</th>
                <td class="py-2 px-4 border">{{ table.id }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Numéro</th>
                <td class="py-2 px-4 border">{{ table.number }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Places</th>
                <td class="py-2 px-4 border">{{ table.seats }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Disponible</th>
                <td class="py-2 px-4 border">{{ table.isAvailable ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-6 flex justify-between items-center">
        <a href="{{ path('app_table_index') }}" class="text-blue-500 hover:underline">← Retour à la liste</a>
        <a href="{{ path('app_table_edit', {'id': table.id}) }}" class="text-green-500 hover:underline">Modifier</a>
    </div>

    <div class="mt-4">
        {{ include('table/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
