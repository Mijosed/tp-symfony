{% extends 'base.html.twig' %}

{% block title %}Modifier l'Utilisateur{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Titre -->
    <h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">Modifier l'Utilisateur</h1>

    <!-- Formulaire -->
    <div class="bg-white shadow-lg rounded-xl p-8 border border-gray-200">
        {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <!-- Liens supplémentaires -->
    <div class="mt-6 flex justify-between items-center">
        <!-- Retour -->
        <a href="{{ path('app_user_index') }}" class="text-blue-600 hover:text-blue-800 font-semibold">
            ← Retour à la liste
        </a>

        <!-- Suppression -->
        <div>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
