{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-red-600 mb-6">Détails de l'Utilisateur</h1>

    <table class="w-full border border-gray-300 text-left">
        <tbody>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Id</th>
                <td class="py-2 px-4 border">{{ user.id }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Nom d'utilisateur</th>
                <td class="py-2 px-4 border">{{ user.username }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Email</th>
                <td class="py-2 px-4 border">{{ user.email }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Mot de passe</th>
                <td class="py-2 px-4 border">{{ user.password }}</td>
            </tr>
            <tr>
                <th class="py-2 px-4 border bg-gray-100">Rôles</th>
                <td class="py-2 px-4 border">{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-6 flex justify-between">
        <a href="{{ path('app_user_index') }}" class="text-blue-500 hover:underline">Retour à la liste</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-green-500 hover:underline">Modifier</a>
    </div>

    <div class="mt-4">
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
